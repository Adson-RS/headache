


-- YOU ARE ALONE
function love.load()
		--- circulo
		button = {}
		button.x = 200
		button.y = 900
		button.size = 50
		---

		pontos = 0
		tempo = 0

		--- quadrado
		ClickAndLose = {}
			ClickAndLose.x = 400
			ClickAndLose.y = 500
			ClickAndLose.lado = 100
		---

		myFont = love.graphics.newFont( 40 )

		perder = false
		imagemPerdeu = love.graphics.newImage( "lose.jpeg" ) -- vai printar essa imagem na tela




	end

	function love.update( dt )

		tempo = tempo + dt

		if button.y <= 900 and button.y >= 100 then   --- faz o circulo se mover pra cima
			button.y = button.y - 30 * dt
		end

		if button.x <= 700 and button.x >= 100 then
			button.x = button.x + 30 * dt
		end



		-- quadrado
		if ClickAndLose.x >= 100 and ClickAndLose.x < 700 then -- aqui a condição de movimento
			ClickAndLose.x = ClickAndLose.x - 30 * dt

			if ClickAndLose.x == 100 then
				ClickAndLose.x = ClickAndLose.x + 30*dt
			end

		end


	end

	function love.draw()

		local largura = love.graphics.getWidth()
		local altura = love.graphics.getHeight()

		-- tu vai ter que variar a cor
		love.graphics.setColor( 0, 0, 255 )
		love.graphics.circle( "fill", button.x, button.y, button.size)


		love.graphics.rectangle( "fill", ClickAndLose.x, ClickAndLose.y, ClickAndLose.lado, ClickAndLose.lado)

		love.graphics.setFont(myFont)

		love.graphics.setColor(255, 255, 255)
		love.graphics.print( pontos )


		if perder then -- preciso consertar isso é sobre a imagem de game over
				for i = 0, love.graphics.getWidth() / imagemPerdeu:getWidth() do
					for j = 0, love.graphics.getHeight() / imagemPerdeu:getHeight() do
						love.graphics.draw(imagemPerdeu, i * imagemPerdeu:getWidth(), j * imagemPerdeu:getHeight())
					end
				end
		end
	end

	function love.mousepressed( x, y, b, istouch)
		if b == 1 and distanciaPontos( button.x, button.y, love.mouse.getX(), love.mouse.getY()) < button.size then
				pontos = pontos + 1
				button.x = math.random(button.size, love.graphics.getWidth() - button.size)
				button.y = math.random(button.size, love.graphics.getHeight() - button.size)

					ClickAndLose.x = math.random(ClickAndLose.lado, love.graphics.getWidth() - ClickAndLose.lado)
					ClickAndLose.y = math.random(ClickAndLose.lado, love.graphics.getHeight() - ClickAndLose.lado)

			elseif distanciaPontos( ClickAndLose.x, ClickAndLose.y, love.mouse.getX(), love.mouse.getY()) < ClickAndLose.lado then
				perder = true
			end

	end


	function distanciaPontos( x1, x2, y1, y2 )
		return math.sqrt(( y2 - y1 )^2 - ( x2 - x1 )^2)
	end
	
	if (ClickAndLose.x + 1) >= 100 and (ClickAndLose.x - 1) <= 700 then -- aqui a condição de movimento
			ClickAndLose.x = ClickAndLose.x - ((300 * dt) * w)
		elseif (ClickAndLose.x) > 100 then
			w = w * (-1)
			ClickAndLose.x = 100
		elseif (ClickAndLose.x) < 700 then
			w = w * (-1)
			ClickAndLose.x = 700
		end


